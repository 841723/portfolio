---
import Section from "@/components/Section.astro";
import TechPill from "@/components/TechPill.astro";
import TechStack from "@/components/icons/TechStack.astro";

import { TECH_STACK } from "@/techstack";
---

<Section title="Tech Stack" id="techstack">
    <TechStack slot="icon"/> 
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-8">
        {
            TECH_STACK.map((tech, index) => (
                <article class:list={["grid grid-rows-[auto_1fr] border-gray-700 bg-gray-800 rounded-lg w-full hover:scale-105 hover:bg-gray-700 transition-all duration-500", {"md:col-span-2":(index+1===TECH_STACK.length)}]}>
                    <h4 class="text-center p-2 bg-slate-300 text-gray-800 rounded-t text-xl font-bold">
                        {tech.title}
                    </h4>
                    <div class="grid items-center">
                        <ul class="flex flex-wrap justify-center gap-x-4 gap-y-2 p-2 w-full">
                            {tech.used_tech.map((tech, ) => (
                                <article class:list={['grid items-center', {}]}>
                                    <TechPill tech={tech} size="lg" />
                                </article>
                            ))}
                        </ul>
                    </div>
                </article>
            ))
        }
    </div>
</Section>
