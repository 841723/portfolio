---
import { BASE_URL } from "@/consts";
import TechPill from "@/components/TechPill.astro";
import GithubIcon from "@/components/icons/Github.astro";
import LinkIcon from "@/components/icons/Link.astro";

import { tcommons, tobj } from "@/i18n";
import type { Locale } from "@/types";

interface Props {
    title: {
        en: string,
        es: string
    },
    // subtitle?: string,
    description: {
        en: string,
        es: string
    },
    img: string,
    gh_link?: string,
    preview_link?: string,
    used_tech: string[],
    locale: Locale
}

const { title, description, img, gh_link, preview_link, used_tech, locale } =
    Astro.props;

// create a function to translate to locale languaje the objects: {en: "value", es: "valor"}
const t = tobj(locale);
const tcommon = tcommons(locale);

---

<article
    class="flex flex-col items-center border rounded-lg shadow md:flex-row w-full border-gray-700 bg-gray-800 hover:scale-105 hover:bg-gray-700 transition-all duration-500"
>
    <div class="min-w-48 w-full md:w-48 h-[232px]">
        <img
            class="object-cover rounded-t-lg w-full md:w-auto h-full md:aspect-square md:rounded-none md:rounded-s-lg"
            src={BASE_URL + img}
            alt=`${title} icon`
        />
    </div>

    <div
        class="flex flex-col justify-between md:h-[232px] min-h-44 w-full py-4 px-4 leading-normal"
    >
        <div class="flex flex-row justify-between">
            <div class="mb-2">
                <h5 class="text-2xl font-bold tracking-tight text-white">
                    {t(title)}
                </h5>
                <!-- {subtitle && 
                    <h6 class="text-sm m-0 italic opacity-80"> 
                        {subtitle}
                    </h6>
                } -->
            </div>
            <ul class="flex flex-row justify-end gap-x-2">
                <li>
                    {
                        preview_link && (
                            <a
                                href={preview_link}
                                target="_blank"
                                class="flex flex-row gap-x-1 items-center rounded-xl py-1 px-2 border-1 hover:bg-gray-800  transition-all duration-100"
                            >
                                <LinkIcon /> {tcommon("projects-preview")}
                            </a>
                        )
                    }
                </li>

                <li>
                    {
                        gh_link && (
                            <a
                                href={gh_link}
                                target="_blank"
                                class="flex flex-row gap-x-1 items-center rounded-xl py-1 px-2 border hover:bg-gray-800  transition-all duration-100"
                            >
                                <GithubIcon /> {tcommon("projects-code")}
                            </a>
                        )
                    }
                </li>
            </ul>
        </div>
        <p class="my-3 font-normal text-gray-400 text-pretty">
            {t(description)}
        </p>
        <div class="flex flex-wrap gap-2">
            {used_tech?.map((tech) => <TechPill tech={tech} />)}
        </div>
    </div>
</article>
