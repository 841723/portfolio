---
import { BASE_URL } from "@/consts";

import type { Locale } from "@/types";

interface Props {
    position: {
        en: string,
        es: string
    };
    company: {
        name: string;
        href: string;
        color: string;
        bgcolor: string;
    };
    img: string;
    date: string;
    height: {
        en: string,
        es: string
    };
     description: {
        en: string,
        es: string
    };
    locale: Locale;
}

const { position, company, img, date, height, description, locale } =
    Astro.props;

import { tobj } from "@/i18n";
const t = tobj(locale);
---

<article
    class="flex flex-col items-center border rounded-lg shadow md:flex-row w-full border-gray-700 bg-gray-800 group hover:bg-gray-700 transition-all duration-500"
>
    <style>
    @media (min-width: 768px) {
        .md-dynamic-height {
            height: var(--dynamic-height);
        }
    }
    </style>
    <div class={`min-w-48 w-full md:w-48 overflow-hidden rounded-t-lg md:rounded-t-none md:rounded-l-lg flex items-center justify-center h-40 md-dynamic-height`} style={`--dynamic-height: ${t(height)}px; background-color: ${company.bgcolor};`}>
        <img
            class="object-contain rounded-t-lg w-full md:w-auto h-auto md:aspect-square md:group-hover:scale-110 transform transition-all duration-500 scale-50 md:scale-100"
            src={BASE_URL + img}
            alt=`${t(position)} icon`
        />
    </div>

    <div
        class="flex flex-col justify-between min-h-44 w-full py-4 px-4 leading-normal"
    >
        <div class="flex flex-row justify-between">
            <div class="mb-2">
                <h5 class="text-2xl font-bold tracking-tight text-white">
                    <span class="uppercase">
                        {t(position)}
                    </span>
                    <br />
                    <span class="text-gray-400 font-normal text-lg">
                        at
                    </span>
                    <a
                        class=`${company.color} font-semibold hover:underline`
                        href={company.href}
                        target="_blank"
                    >
                        {company.name}
                    </a>
                </h5>
                <h6 class="text-sm m-0 opacity-80 uppercase"> 
                    {date}
                </h6>
            </div>
        </div>
        <p class="my-3 font-normal text-gray-400">
            {t(description).split("**").map((part, index) => 
                index % 2 === 1 ? <strong class="text-gray-200">{part}</strong> : part
            )}
        </p>
    </div>
</article>
