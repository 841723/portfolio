---
import { BASE_URL } from "@/consts";

import type { WorkExperienceItem } from "@/types";

interface Props extends WorkExperienceItem {}

const { date, title, company, description, img, height=232 } =
    Astro.props;
---

<article
    class="flex flex-col items-center border rounded-lg shadow md:flex-row w-full border-gray-700 bg-gray-800 hover:scale-105 hover:bg-gray-700 transition-all duration-500"
>
    <div class="min-w-48 w-full md:w-48" style=`height: ${height}px;`>
        <img
            class="object-cover rounded-t-lg w-full md:w-auto h-full md:aspect-square md:rounded-none md:rounded-s-lg"
            src={BASE_URL + img}
            alt=`${title} icon`
        />
    </div>

    <div
        class="flex flex-col justify-between min-h-44 w-full py-4 px-4 leading-normal"
    >
        <div class="flex flex-row justify-between">
            <div class="mb-2">
                <h5 class="text-2xl font-bold tracking-tight text-white">
                    <span class="uppercase">
                        {title} 
                    </span>
                    <br />
                    <span class="text-gray-400 font-normal">
                        at
                    </span>
                    <a
                        class=`${company.color} font-semibold uppercase hover:underline`
                        href={company.href}
                        target="_blank"
                    >
                        {company.name}
                    </a>
                </h5>
                <h6 class="text-sm m-0 italic opacity-80"> 
                    {date}
                </h6>
            </div>
        </div>
        <p class="my-3 font-normal text-gray-400 text-pretty">
            {description}
        </p>
    </div>
</article>
